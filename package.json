{
  "name": "task-three-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn workspace @task-three/frontend dev",
    "dev:backend": "yarn workspace @task-three/backend start:dev",
    "dev:all": "concurrently \"yarn dev\" \"yarn dev:backend\"",
    "build": "yarn workspace @task-three/frontend build",
    "build:backend": "yarn workspace @task-three/backend build",
    "build:all": "yarn workspaces foreach -A run build",
    "lint": "yarn workspaces foreach -A run lint",
    "test": "yarn workspaces foreach -A run test"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
